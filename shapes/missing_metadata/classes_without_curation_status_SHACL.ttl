@prefix :     <https://www.tib.eu/digitrubber/shapes#> .
@prefix sh:   <http://www.w3.org/ns/shacl#> .
@prefix rdf:  <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix owl:  <http://www.w3.org/2002/07/owl#> .
@prefix obo:  <http://purl.obolibrary.org/obo/> .

:DigitRubberClassMissingCurationStatusShape
    a sh:NodeShape ;
    
    sh:target [
        a sh:SPARQLTarget ;
        sh:select """
            SELECT ?this WHERE {
              ?this rdf:type owl:Class .
               FILTER (STRSTARTS(STR(?this), "http://purl.obolibrary.org/obo/DIGITRUBBER_"))
            }
        """ ;
    ] ;

    sh:property [
        sh:path obo:IAO_0000114 ;
        sh:minCount 1 ;
        sh:message
          "DIGITRUBBER class is missing curation status (obo:IAO_0000114)." ;
    ] ;

    sh:severity sh:Violation .
