@prefix :     <https://www.tib.eu/digitrubber/shapes#> .
@prefix sh:   <http://www.w3.org/ns/shacl#> .
@prefix rdf:  <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl:  <http://www.w3.org/2002/07/owl#> .

:DigitRubberClassMissingGermanLabelShape
    a sh:NodeShape ;

    sh:target [
        a sh:SPARQLTarget ;
        sh:select """
            SELECT ?this WHERE {
              ?this rdf:type owl:Class .
              FILTER (STRSTARTS(STR(?this), "http://purl.obolibrary.org/obo/DIGITRUBBER_"))
            }
        """ ;
    ] ;

    sh:sparql [
        a sh:SPARQLConstraint ;
        sh:message "DIGITRUBBER class '{$thisLabel}' is missing a German (de) label." ;
        sh:select """
            SELECT ?this ?thisLabel WHERE {
              ?this rdf:type owl:Class .

              OPTIONAL { ?this rdfs:label ?thisLabel .
                FILTER ( LANG(?thisLabel) = "en" ) }

              FILTER NOT EXISTS { ?this rdfs:label ?l .
                FILTER ( LANG(?l) = "de" ) }
            }
        """ ;
    ] ;

    sh:severity sh:Violation .
