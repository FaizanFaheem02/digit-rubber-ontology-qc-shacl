@prefix : <https://www.tib.eu/digitrubber/shapes#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix obo: <http://purl.obolibrary.org/obo/> .

:ClassMoreThanOneEnglishDefinitionShape
    a sh:NodeShape ;
    sh:targetClass owl:Class ;

    sh:sparql [
        a sh:SPARQLConstraint ;
        sh:message "Class has more than one English definition (obo:IAO_0000115)." ;

        sh:select """
            SELECT $this
            WHERE {
              $this obo:IAO_0000115 ?defEn .
              FILTER (lang(?defEn) = "en")
            }
            GROUP BY $this
            HAVING (COUNT(?defEn) > 1)
        """ ;
    ] ;

    sh:severity sh:Violation .
