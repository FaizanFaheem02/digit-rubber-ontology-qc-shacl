@prefix : <https://www.tib.eu/digitrubber/shapes#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix obo: <http://purl.obolibrary.org/obo/> .

:ClassMoreThanOneEnglishDefinitionShape
    a sh:NodeShape ;
    sh:targetClass owl:Class ;
     sh:severity sh:Violation ;

   sh:property [
        sh:path obo:IAO_0000115 ;

        # Only values that match this shape are counted
        sh:qualifiedValueShape [
            sh:datatype rdf:langString ;
            sh:languageIn ( "en" ) ;
        ] ;

        # Allow at most one English definition
        sh:qualifiedMaxCount 1 ;

        sh:message
          "Class has more than one English definition (obo:IAO_0000115)." ;
    ] .

   
