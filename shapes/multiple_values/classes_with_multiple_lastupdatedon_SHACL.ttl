@prefix :   <https://www.tib.eu/digitrubber/shapes#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix pav: <http://purl.org/pav/> .

:ClassMoreThanOneLastUpdateOnShape
    a sh:NodeShape ;
    
    sh:targetSubjectsOf pav:lastUpdateOn ;

    sh:severity sh:Violation ;

    sh:sparql [
        a sh:SPARQLConstraint ;
        sh:message
            "Class has more than one pav:lastUpdateOn value." ;

        sh:select """
            SELECT $this
            WHERE {
              $this pav:lastUpdateOn ?date .
            }
            GROUP BY $this
            HAVING (COUNT(DISTINCT ?date) > 1)
        """ ;
    ] .
