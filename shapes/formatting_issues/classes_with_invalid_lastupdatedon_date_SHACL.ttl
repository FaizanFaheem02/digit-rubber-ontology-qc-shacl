@prefix :    <https://www.tib.eu/digitrubber/shapes#> .
@prefix sh:  <http://www.w3.org/ns/shacl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:<http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix pav: <http://purl.org/pav/> .

:DigitRubberClassInvalidLastUpdateOnShape
    a sh:NodeShape ;
    sh:severity sh:Violation ;

    sh:target [
        a sh:SPARQLTarget ;
        sh:select """
          SELECT ?this WHERE {
            ?this rdf:type owl:Class .
            FILTER (STRSTARTS(STR(?this), "http://purl.obolibrary.org/obo/DIGITRUBBER_") || STRSTARTS(STR(?this), "http://purl.obolibrary.org/obo/DIGITRUBBER"))
          }
        """ ;
    ] ;

    sh:sparql [
        a sh:SPARQLConstraint ;
        sh:message "DIGITRUBBER class '{$classId}' ('{$label}') has an invalid value '{$date}' for pav:lastUpdateOn." ;
        sh:select """
          SELECT ?this ?label ?date
                 (REPLACE(STR(?this), ".*/", "") AS ?classId)
          WHERE {
            OPTIONAL {
              ?this rdfs:label ?label .
              FILTER (LANG(?label) = "en")
            }

            ?this pav:lastUpdateOn ?date .

            FILTER (isLiteral(?date) && !regex(str(?date), "^[0-9]{4}") && !regex(str(?date), "^[0-9]{1,2}[.-][0-9]{1,2}[.-][0-9]{4}"))
          }
        """ ;
    ] .
