@prefix :         <https://www.tib.eu/digitrubber/shapes#> .
@prefix sh:       <http://www.w3.org/ns/shacl#> .
@prefix rdf:      <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:     <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl:      <http://www.w3.org/2002/07/owl#> .
@prefix oboInOwl: <http://www.geneontology.org/formats/oboInOwl#> .
@prefix xsd:      <http://www.w3.org/2001/XMLSchema#> .

:DigitRubberClassInvalidCreationDateShape
    a sh:NodeShape ;

    sh:target [
        a sh:SPARQLTarget ;
        sh:select """
          SELECT ?this WHERE {
            ?this rdf:type owl:Class .
            FILTER (STRSTARTS(STR(?this), "http://purl.obolibrary.org/obo/DIGITRUBBER_") || STRSTARTS(STR(?this), "http://purl.obolibrary.org/obo/DIGITRUBBER"))
          }
        """ ;
    ] ;

    sh:sparql [
        a sh:SPARQLConstraint ;
        sh:message "DIGITRUBBER class '{$classId}' ('{$label}') has a non-date value '{$date}' for oboInOwl:creation_date." ;
        sh:select """
          SELECT ?this ?label ?date ?value
                 (REPLACE(STR(?this), ".*/", "") AS ?classId)
          WHERE {
            OPTIONAL { ?this rdfs:label ?label .
              FILTER (LANG(?label) = "en") }

            ?this oboInOwl:creation_date ?date .

            FILTER (!isLiteral(?date) || DATATYPE(?date) != xsd:date && DATATYPE(?date) != xsd:Date && DATATYPE(?date) != xsd:dateTime)
            BIND(?date AS ?value)
          }
        """ ;
    ] ;

    sh:severity sh:Violation .